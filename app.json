{
  "name": "watchmarket",
  "buildpacks":[
    {
      "url": "https://github.com/heroku/heroku-buildpack-nginx"
    },
    {
      "url":"heroku/go"
    }
  ],
  "addons": [
    "heroku-postgresql:hobby-dev",
    "heroku-redis:hobby-dev"
  ],
  "environments": {
    "review": {
      "addons": [
        {
          "plan":"heroku-postgresql:hobby-dev",
          "as":"STORAGE_POSTGRES"
        },
        {
          "plan":"heroku-redis:hobby-dev",
          "as":"STORAGE_REDIS"
        }
      ]
    }
  }
} 